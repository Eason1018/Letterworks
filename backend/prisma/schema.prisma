generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Template {
  id             String   @id @default(uuid())
  name           String
  category       String?
  description    String?
  requiredFields String
  optionalFields String
  structure      String
  toneVariants   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  wizardSessions WizardSession[]
  drafts         LetterDraft[]
}

model WizardSession {
  id         String   @id @default(uuid())
  templateId String
  currentStep Int
  data       String
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  template   Template @relation(fields: [templateId], references: [id])
}

model LetterDraft {
  id          String   @id @default(uuid())
  templateId  String
  title       String
  data        String
  toneSettings String?
  previewText String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  template    Template @relation(fields: [templateId], references: [id])
  versions    LetterVersion[]
  outputs     OutputRequest[]
}

model LetterVersion {
  id          String   @id @default(uuid())
  draftId     String
  versionNumber Int
  previewText String
  toneSettings String?
  createdAt   DateTime @default(now())

  draft       LetterDraft @relation(fields: [draftId], references: [id])
}

model OutputRequest {
  id          String   @id @default(uuid())
  draftId     String
  method      String
  status      String
  destination String?
  createdAt   DateTime @default(now())

  draft       LetterDraft @relation(fields: [draftId], references: [id])
}
